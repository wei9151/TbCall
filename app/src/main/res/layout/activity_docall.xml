<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#7e393f"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="正在拨号中......"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="中国移动"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/docall_head_frame"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/tb_head" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="138123456789"
            android:textColor="#ffffff"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="电话号码"
            android:textColor="#ffffff"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#601f25"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_temp1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/docall_item_click"
                android:gravity="center"
                android:text="录 音"
                android:textColor="#e2dede"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_temp2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/docall_item_click"
                android:gravity="center"
                android:text="等 待"
                android:textColor="#e2dede"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_temp3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/docall_item_click"
                android:gravity="center"
                android:text="备忘录"
                android:textColor="#e2dede"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_temp4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/docall_item_click"
                android:gravity="center"
                android:text="添加通话"
                android:textColor="#e2dede"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_temp5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/docall_item_click"
                android:gravity="center"
                android:text="静 音"
                android:textColor="#e2dede"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_temp6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/docall_item_click"
                android:gravity="center"
                android:text="联系人"
                android:textColor="#e2dede"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hangup"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:background="@drawable/docall_bottom_phone"
                android:gravity="center"
                android:text="中国移动"
                android:textColor="#ffffff"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
