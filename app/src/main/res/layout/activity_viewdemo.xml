<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.testpro.ndkdemo.view.TestButton
        android:id="@+id/tvMove1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:background="#081799"
        android:textSize="18dp"
        android:text="可移动的块"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:background="#911e61"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:text="块2"
        android:gravity="center"/>

    <com.testpro.ndkdemo.view.ScrollerLayout
        android:id="@+id/s_layout"
        android:background="#e2bcd2"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/child1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="#ffffff"
            android:background="#911e61"
            android:textSize="18dp"
            android:text="滚动----****---TextView--1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/child2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="#ffffff"
            android:background="#34a434"
            android:textSize="18dp"
            android:text="滚动TextView--2000"
            android:gravity="center"/>

        <TextView
            android:id="@+id/child3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="#ffffff"
            android:background="#194476"
            android:textSize="18dp"
            android:text="滚动TextView--3000"
            android:gravity="center"/>

    </com.testpro.ndkdemo.view.ScrollerLayout>

</LinearLayout>
